<nav class="navbar bg-primary text-center" data-bs-theme="dark">
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'navbar-nav fs-3 text-decoration-none' %>
    <h1 class= "navbar-nav mx-auto">Category</h1>
    <%= link_to ">", root_path, :method => :delete, class: 'navbar-nav fs-1 text-decoration-none' %>
</nav>
<main class="container">
    <div class="row align-items-center" style="max-height: 200px;">
    <div class="col">
        <img src = <%= @group.icon%> alt = 'icon'style="max-height: 200px;">
    </div>
    <div class="col">
        <h2><%= @group.name %></h2>
        <p><%= @group.created_at%></p>
    </div>
    <div class="col">
        <p>$<%= @group.total %></p>
    </div>
    </div>
    <%= link_to "add Transaction", new_category_transaction_path(@group.id), class: "btn btn-primary" %>
    <% @entities.each do |entity|%>
        <div class="row text-center p-4">
        <div class="col">
            <h2><%= entity.name %></h2>
        </div>
        <div class="col">
            <p>$<%= entity.amount %></p>
        </div>
        </div>
    <%end%>

</main>
